<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Saldo.SaldoFragment">

    <!-- TODO: Update blank fragment layout -->


    <androidx.cardview.widget.CardView
        android:layout_marginTop="16dp"
        android:id="@+id/total_pemasukan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_total_pemasukan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pemasukan"
                android:textSize="40dp"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:id="@+id/nominal_pemasukan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_total_pemasukan"
                android:text="Rp 55.000"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:textSize="32dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_below="@id/total_pemasukan"
        android:layout_marginTop="16dp"
        android:id="@+id/total_pengeluaran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_total_pengeluaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pengeluaran"
                android:layout_marginLeft="16dp"
                android:textSize="40dp"/>

            <TextView
                android:layout_marginLeft="16dp"
                android:id="@+id/nominal_pengeluaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_total_pengeluaran"
                android:text="Rp 55.000"
                android:layout_marginTop="8dp"
                android:textSize="32dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_below="@id/total_pengeluaran"
        android:layout_marginTop="16dp"
        android:id="@+id/total_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="16dp"
                android:id="@+id/txt_total_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Saldo"
                android:textSize="40dp"/>

            <TextView
                android:layout_marginLeft="16dp"
                android:id="@+id/nominal_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_total_all"
                android:text="Rp 55.000"
                android:layout_marginTop="8dp"
                android:textSize="32dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>